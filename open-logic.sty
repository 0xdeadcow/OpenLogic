\def\Assign#1#2{#1^{\Struct #2}}


% value of a term symbol in a structure
\DeclareDocumentCommand \Value { m m o} {
    \IfNoValueTF {#3}
        { \mathrm{Val}^{\Struct #2}(#1) }
        { \mathrm{Val}^{\Struct #2}_{#3}(#1) }
}





